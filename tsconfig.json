{
    "compilerOptions": {
        "target": "es2022",
        "lib": [
            "dom",
            "dom.iterable"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "es2022",
        "moduleResolution": "bundler",
        "resolveJsonModule": false,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "dist",
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "experimentalDecorators": true,
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}
