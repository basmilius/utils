{
    "name": "@basmilius/utils",
    "version": "1.3.0",
    "description": "Various utilities that are commonly used in personal projects.",
    "type": "module",
    "license": "MIT",
    "funding": "https://github.com/sponsors/basmilius",
    "author": {
        "name": "Bas Milius",
        "email": "bas@mili.us",
        "url": "https://bas.dev"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/basmilius/utils.git"
    },
    "keywords": [
        "util",
        "utils",
        "vue",
        "pinia"
    ],
    "scripts": {
        "build": "pnpm esbuild && pnpm gentypes",
        "dev": "pnpm esbuild --watch",
        "esbuild": "esbuild src/index.ts --bundle --sourcemap --external:luxon --external:pinia --platform=browser --target=esnext --format=esm --outfile=dist/utils.js",
        "gentypes": "tsc && tsc-alias"
    },
    "engines": {
        "node": ">=22"
    },
    "files": [
        "dist/*"
    ],
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "main": "./dist/utils.js",
    "types": "./dist/index.d.ts",
    "typings": "./dist/index.d.ts",
    "sideEffects": false,
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/utils.js"
        }
    },
    "devDependencies": {
        "@types/luxon": "^3.4.2",
        "esbuild": "^0.24.0",
        "luxon": "^3.5.0",
        "pinia": "^2.3.0",
        "tsc-alias": "^1.8.10",
        "typescript": "^5.7.2"
    },
    "peerDependencies": {
        "luxon": "^3.5.0",
        "pinia": "^2.2.4"
    }
}
